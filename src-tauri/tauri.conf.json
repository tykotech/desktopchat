{
  "productName": "DesktopChat",
  "version": "0.1.0",
  "identifier": "com.tauri.dev.desktopchat",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev:app",
    "beforeBuildCommand": "npm run build:backend"
  },
  "app": {
    "windows": [
      {
        "title": "DesktopChat",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "../src-deno/bin/backend"
    ]
  },
  "plugins": {
    "shell": {
      "open": true,
      "sidecar": true,
      "scope": [
        {
          "name": "src-deno/bin/backend",
          "sidecar": true,
          "args": []
        }
      ]
    }
  }
}